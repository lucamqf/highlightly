{
  "name": "highlightly",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && tsc-alias",
    "dev": "cross-env NODE_ENV=local nodemon --watch \"src/**\" --ext \"ts, json\" --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "format": "prettier --write ./**/*.{ts,js,json,*rc}",
    "lint": "eslint . --ext .ts --fix",
    "migration:generate": "cross-env NODE_ENV=local typeorm-ts-node-commonjs -d ./src/infra/config/database/index.ts migration:generate ./src/infra/config/database/migrations/default",
    "migration:revert": "cross-env NODE_ENV=local typeorm-ts-node-commonjs -d ./src/infra/config/database/index.ts migration:revert",
    "migration:run": "cross-env NODE_ENV=local typeorm-ts-node-commonjs -d ./src/infra/config/database/index.ts migration:run",
    "precommit": "lint-staged && npm run lint",
    "start": "cross-env node dist/src/main.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "pg": "^8.11.3",
    "puppeteer": "^22.4.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  }
}
